{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "outDir": "dist",
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "src"
  ]
}
